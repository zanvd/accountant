{% extends 'base.html.twig' %}
{% block title %}View Transaction Template | {{ parent() }}{% endblock %}
{% block headerText %}Transaction Template{% endblock %}
{% block headerActions %}
    {{ include('_actions.html.twig', {
        actions: {
            delete: 'transaction_template_delete',
            edit: 'transaction_template_edit',
            index: 'transaction_template_index'
        },
        data: transactionTemplate
    }) }}
{% endblock %}
{% block content %}
    <article class="min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <section class="w-full max-w-md space-y-8">
            <div class="view-container">
                <div class="px-4 py-5 sm:px-6">
                    <h2 class="font-bold text-2xl">{{ transactionTemplate.name }}</h2>
                </div>
                <div class="view-data-container">
                    <dl>
                        <div>
                            <dt>Category</dt>
                            <dd>
                                <span class="pill"
                                      style="background-color: {{ transactionTemplate.Category.color }}; color: {{ transactionTemplate.Category.textColor }};"
                                >
                                    {{ transactionTemplate.Category.name }}
                                </span>
                            </dd>
                        </div>
                        <div>
                            <dt>Type</dt>
                            <dd>
                                {% if transactionTemplate.isIncome() == 'income' %}
                                    <span class="pill income">Income</span>
                                {% else %}
                                    <span class="pill outcome">Outcome</span>
                                {% endif %}
                            </dd>
                        </div>
                        <div>
                            <dt>Position</dt>
                            <dd>{{ transactionTemplate.position }}</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </section>
    </article>
{% endblock %}
