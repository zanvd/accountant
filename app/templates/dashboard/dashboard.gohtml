{{define "content"}}
    <section>
        <article id="dashboard-card-container">
            {{if not .Data}}
            {{else}}
                {{range $transactionTemplate := .Data}}
                    <div class="dashboard-card"
                         data-transaction-category="{{$transactionTemplate.Category.Id}}"
                         data-transaction-name="{{$transactionTemplate.Name}}"
                         data-transaction-type="{{$transactionTemplate.TransactionType}}"
                    >
                        <p>
                            <b>{{$transactionTemplate.Name}}</b>
                        </p>
                        <p>
                            <span class="pill"
                                  style="background-color: {{$transactionTemplate.Category.Color}}; color: {{$transactionTemplate.Category.TextColor}};"
                            >
                                {{$transactionTemplate.Category.Name}}
                            </span>
                        </p>
                    </div>
                {{end}}
            {{end}}
        </article>
    </section>
{{end}}
