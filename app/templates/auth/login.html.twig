{% extends 'base.html.twig' %}
{% block title %}Login | {{ parent() }}{% endblock %}
{% block content %}
<article>
    {{ include('_heading.html.twig', {title: 'Login'}) }}
    <section>
        {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            <p style="text-align: center;">
                <a href="{{ url('auth_register') }}">Create an account</a>
            </p>
            <p style="text-align: center;">
                <a href="{{ url('auth_forgot_password') }}">Forgot password</a>
            </p>
        {{ form_end(form) }}
    </section>
</article>
{% endblock %}
