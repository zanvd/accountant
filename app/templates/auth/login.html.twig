{% extends 'base.html.twig' %}
{% block title %}Login | {{ parent() }}{% endblock %}
{% block headerText %}Login{% endblock %}
{% block content %}
    <article class="min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <section class="w-full max-w-md space-y-8">
            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {% if error is not empty %}
                <p class="text-red-600">{{ error.messageKey }}</p>
            {% endif %}
            <div class="flex flex-col items-center space-y-2 sm:flex-row sm:justify-between sm:space-y-0">
                <p>
                    <a href="{{ url('auth_register') }}">Create an account</a>
                </p>
                <p>
                    <a href="{{ url('auth_forgot_password') }}">Forgot password</a>
                </p>
            </div>
            {{ form_end(form) }}
        </section>
    </article>
{% endblock %}
