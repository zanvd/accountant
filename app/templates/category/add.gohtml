{{define "content"}}
    <section>
        <article class="page-title">
            <h1>Categories</h1>
            <div class="actions">
                <a class="btn btn-icon btn-list" href="{{url "category-list" .Routes}}">
                    <svg class="feather">
                        <use xlink:href="{{.Routes.BaseUrl}}/static/icons/feather-sprite.svg#list"/>
                    </svg>
                </a>
            </div>
        </article>
        <article>
            <form action="{{url "category-add" .Routes}}" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" name="name" placeholder="Name" required type="text"/>
                </div>
                <div class="form-group">
                    <label for="color">Color:</label>
                    <div class="color-input-container">
                        <input id="color" name="color" required type="color"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="text-color">Text Color:</label>
                    <div class="color-input-container">
                        <input id="text-color" name="text-color" required type="color"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input id="description" name="description" placeholder="Description" type="text"/>
                </div>
                <div class="form-actions">
                    <button class="btn btn-icon" type="submit">
                        <svg class="feather">
                            <use xlink:href="{{.Routes.BaseUrl}}/static/icons/feather-sprite.svg#check"/>
                        </svg>
                    </button>
                    <button class="btn btn-icon btn-cancel go-back" type="button">
                        <svg class="feather">
                            <use xlink:href="{{.Routes.BaseUrl}}/static/icons/feather-sprite.svg#x"/>
                        </svg>
                    </button>
                </div>
            </form>
        </article>
    </section>
{{end}}
